<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".SignUp">
    <RelativeLayout
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:id="@+id/layoutHeader"


        app:layout_constraintTop_toTopOf="parent"
        >
        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/telemedicine_f"
            ></de.hdodenhof.circleimageview.CircleImageView>



    </RelativeLayout>
    <TextView
        android:layout_below="@id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up Account"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        >

    </TextView>
    <EditText
        android:layout_marginTop="230dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/buttom_2"
        android:id="@+id/Email_Main"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Enter Email"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="20dp"

        >

    </EditText>
    <EditText
        android:layout_below="@+id/Email_Main"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/buttom_2"
        android:id="@+id/Password_Main"
        android:maxLength="6"
        android:inputType="number"
        android:maxLines="1"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Password"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="20dp"

        >

    </EditText>

    <Button
        android:id="@+id/Register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_4"
        android:layout_below="@+id/Password_Main"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Login"
        >

    </Button>
    <TextView
        android:layout_below="@+id/Register"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/havnot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Have Account?"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/ubuntu_regular"

        android:layout_marginLeft="20dp">

    </TextView>
    <TextView
        android:layout_below="@id/havnot"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/idSignin"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="Sign In"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/havnot"
        android:layout_marginLeft="20dp"></TextView>




</RelativeLayout>