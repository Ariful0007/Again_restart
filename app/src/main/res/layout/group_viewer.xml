<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:padding="3dp"
    android:layout_margin="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/image_group"
            android:src="@drawable/griuphotot"
            ></de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_title"
            android:layout_marginStart="4dp"
            android:text="Group Title"
            android:layout_toEndOf="@id/image_group"
            android:textSize="20sp"
            android:fontFamily="@font/ubuntu_regular"
            android:textColor="@color/black"
            android:layout_marginEnd="20dp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message1"
            android:layout_marginStart="4dp"
            android:text="Sender Text"
            android:layout_toEndOf="@id/image_group"
            android:layout_below="@id/text_title"
            android:textSize="15sp"
            android:fontFamily="@font/ubuntu_regular"
            android:textColor="@color/black"
            android:layout_marginEnd="20dp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/themessage"
            android:layout_marginStart="4dp"
            android:text="The Message"
            android:layout_toEndOf="@id/message1"
            android:layout_below="@id/text_title"
            android:textSize="12sp"
            android:fontFamily="@font/ubuntu_regular"

            android:layout_marginEnd="20dp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time1"
            android:layout_marginStart="4dp"
            android:text="The Message"
            android:layout_toEndOf="@id/message1"
            android:layout_below="@id/message1"
            android:textSize="12sp"
            android:fontFamily="@font/ubuntu_regular"
            android:textAlignment="viewEnd"
            android:layout_alignParentEnd="true"

            android:singleLine="true"

            android:layout_marginEnd="5dp"
            ></TextView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>