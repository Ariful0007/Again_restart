<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/doctor_image_indivisiual"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/doctor"
            ></de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/doctor_image_indivisiual"
            android:layout_centerHorizontal="true"
            android:text="Doctor Name"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/ubuntu_regular"
            android:id="@+id/docotr_name_indivisiul"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:fontFamily="@font/ubuntu_regular"
            android:layout_height="wrap_content"
            android:layout_below="@id/docotr_name_indivisiul"
            android:layout_centerHorizontal="true"
            android:text="Doctor Name"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/docotr_takingtime_indivisiul"
            ></TextView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>